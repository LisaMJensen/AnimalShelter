@{
  Layout = "_Layout";
}

@using AnimalShelter.Models;
@model List<AnimalShelter.Models.Animal>;

<h1>Animals Available for Adoption</h1>

@if (@Model.Count == 0)
{
  <h3>There are no animals in the shelter!</h3>
} 

@foreach (Animal animal in Model)
{
  <li>@Html.ActionLink($"{animal.Name}", "Animal", new { id = animal.AnimalId})</li>
}
<p>@Html.ActionLink("Add new animal", "Create")</p>